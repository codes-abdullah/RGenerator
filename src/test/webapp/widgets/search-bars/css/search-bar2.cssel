@charset "UTF-8";

.${R.html_classes.SEARCH_BAR_CONTAINER}{
	--search-bar-margin: 1px;

	--search-bar-button-min-width: 28px; /*30px - 2 because we have container margin on both sides (left and right) */
	--search-bar-button-min-height: 28px;/*30px - 2 because we have container margin on both sides (top and bottom) */
	--search-bar-button-background-color: #FCFCFC;
	--search-bar-button-background-hover-color: #f5f5f5;
	--search-bar-button-background-click-color: white;
	--search-bar-button-border-color: #DED7FF;
	--search-bar-button-border-radius: 10px;
	--search-bar-button-font-color: #1F1485;
	--search-bar-button-font-hover-color: var(--search-bar-button-font-color);
	--search-bar-button-font-click-color: var(--search-bar-button-font-color);
	--search-bar-button-font-size: 14px;
	
	--search-bar-input-min-width: 30px;
	--search-bar-input-min-height: 30px;
	--search-bar-input-background-color: #FCFCFC;
	--search-bar-input-background-hover-color: #f5f5f5;
	--search-bar-input-background-click-color: white;
	--search-bar-input-border-color: #DED7FF;
	--search-bar-input-border-focus-color: #A799E7;
	--search-bar-input-border-radius: 10px;
	--search-bar-input-font-color: #1F1485;
	--search-bar-input-font-hover-color: var(--search-bar-input-font-color);
	--search-bar-input-font-click-color: var(--search-bar-input-font-color);
	--search-bar-input-font-size: 14px;
	
}


.${R.html_classes.SEARCH_BAR_CONTAINER}{	
	min-height: var(--search-bar-button-min-height);	
	display: flex;
	flex-direction: row-reverse;
	flex-grow: 1;
	align-items: center;	
	
}

.${R.html_classes.SEARCH_BAR_CONTAINER} > *{	
	margin: var(--search-bar-margin);		
}

.${R.html_classes.SEARCH_BAR_INPUT}{
	padding-left: 10px;
	padding-right: 10px;
	min-height: var(--search-bar-input-min-height);
	border: 1px solid var(--search-bar-input-border-color);
	border-radius: var(--search-bar-input-border-radius);
	
	width: 100%;
}

.${R.html_classes.SEARCH_BAR_INPUT}:focus{
	outline: 1px solid var(--search-bar-input-border-focus-color);
}


.${R.html_classes.SEARCH_BAR_BUTTON}{
	min-width: var(--search-bar-button-min-width);
	min-height: var(--search-bar-button-min-height);
	/*border: 1px solid var(--search-bar-button-border-color);
	background: var(--search-bar-button-background-color);*/
	border-radius: var(--search-bar-button-border-radius);
	align-content: center;
	align-items: center;
	align-self: center;
	text-align: center;
	cursor: pointer;	
	position: absolute;
	margin-inline-end: 2px; /*because we have container margin*/
}

.${R.html_classes.SEARCH_BAR_BUTTON}:hover{	
	background: var(--search-bar-button-background-hover-color);
}

.${R.html_classes.SEARCH_BAR_BUTTON} a{
	display: block;
	min-width: var(--search-bar-button-min-width);
	min-height: var(--search-bar-button-min-height);
	align-content: center;
	text-decoration: none;
}

