@charset "UTF-8";

.${R.html_classes.SEARCH_BAR_CONTAINER}{
	--search-bar-button-min-width: 30px;
	--search-bar-button-min-height: 30px;
	--search-bar-button-background-color: #FCFCFC;
	--search-bar-button-background-hover-color: #f5f5f5;
	--search-bar-button-background-click-color: white;
	--search-bar-button-border-color: #DED7FF;
	--search-bar-button-border-radius: 10px;
	--search-bar-button-font-color: #1F1485;
	--search-bar-button-font-hover-color: var(--search-bar-button-font-color);
	--search-bar-button-font-click-color: var(--search-bar-button-font-color);
	--search-bar-button-font-size: 14px;
	
	--search-bar-input-border-color: #DED7FF;
	--search-bar-button-input-radius: 10px;
	
}


.${R.html_classes.SEARCH_BAR_CONTAINER}{	
	min-height: var(--search-bar-button-min-height);	
	display: flex;
	flex-direction: row;
	align-items: center;
}

.${R.html_classes.SEARCH_BAR_CONTAINER} > *{	
	margin-left: 1px;
	margin-right: 1px;
	
}

.${R.html_classes.SEARCH_BAR_INPUT}{
	padding-left: 10px;
	padding-right: 10px;
	min-height: var(--search-bar-button-min-height);
	border: 1px solid var(--search-bar-input-border-color);
	border-radius: var(--search-bar-button-input-radius);
}




.${R.html_classes.SEARCH_BAR_BUTTON}{
	min-width: var(--search-bar-button-min-width);
	min-height: var(--search-bar-button-min-height);
	border: 1px solid var(--search-bar-button-border-color);
	border-radius: var(--search-bar-button-border-radius);
	background: var(--search-bar-button-background-color);
	align-content: center;
	align-items: center;
	align-self: center;
	text-align: center;
	cursor: pointer;
	
}

.${R.html_classes.SEARCH_BAR_BUTTON}:hover{	
	background: var(--search-bar-button-background-hover-color);
}

.${R.html_classes.SEARCH_BAR_BUTTON} a{
	display: block;
	min-width: var(--search-bar-button-min-width);
	min-height: var(--search-bar-button-min-height);
	align-content: center;
	text-decoration: none;
}



