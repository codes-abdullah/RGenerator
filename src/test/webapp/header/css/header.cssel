@charset "UTF-8";
@import url('${R.css.ALL}')   ;
@import url('${R.css.DROPDOWN_MENU}');
@import url('${R.css.BUTTON}');
@import url('${R.css.BUTTON_SPECIAL}');
@import url('${R.css.SEARCH_BAR}');

* {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box; 
  /* 
  outline: 1px solid black; 
  
  */
}


.${R.html_classes.BUTTON_CONTAINER}{

}

.${R.html_classes.SEARCH_BAR_BUTTON_CONTAINER}{
	--search-bar-button-min-width: 30px;
	--search-bar-button-min-height: 30px;	
	--search-bar-button-background-color: #FCFCFC;
	--search-bar-button-background-hover-color: #f5f5f5;
	--search-bar-button-background-click-color: white;
	--search-bar-button-border-color: #DED7FF;
	--search-bar-button-border-radius: 10px;
	--search-bar-button-font-color: #1F1485;
	--search-bar-button-font-hover-color: var(--search-bar-button-font-color);
	--search-bar-button-font-click-color: var(--search-bar-button-font-color);
	--search-bar-button-font-size: 14px;
}


body{
	margin: 0;
}

header {
	display: block;  	
}


.${R.html_classes.HEADER_CONTAINER}{
	margin: 10px;	
	display: flex;
	align-items: center;
}


.${R.html_classes.HEADER_CONTAINER} > *{
	display: flex;
}



.${R.html_classes.DROPDOWN_MENUS_GROUP} > *, .${R.html_classes.BUTTONS_GROUP} > *{
	margin-left: 10px;
	margin-right: 10px;
}

.${R.html_classes.BLANK_SPACE}{	
	background: black;
	flex-grow: 1;
}




.${R.html_classes.HEADER_SEPARATOR}{
	display:block;
	background: #DED7FF;
	width: 100%;
	height: 2px;
	margin-top: 5px;
}

.${R.html_classes.HEADER_SEPARATOR}:div{
	display:block;
	background: red;
	width: 100%;
	height: 5px;
	margin-top: 5px;
}
